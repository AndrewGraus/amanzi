#!/bin/bash

# CMake generates this file
# Replaces each @VAR@ with value of ${VAR}

cd @ECOSIM_source_dir@

rc=$?

echo "copying data to install"

cp -r @ECOSIM_source_dir@ /global2/agraus/code/ats_dev_dir/amanzi_tpls-install-master-Debug
cd /global2/agraus/code/ats_dev_dir/amanzi_tpls-install-master-Debug

mv ecosim--source/ ecosim/

cd /global2/agraus/code/ats_dev_dir/amanzi_tpls-install-master-Debug/ecosim

mkdir local/lib

find . -name lib*.a -exec cp {} ./local/lib/ \;

echo "make ecosim returned $rc"

exit $?
