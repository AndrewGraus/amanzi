# CMake PFloTran patch file

# Now run the patch script
set(command sh @ECOSIM_sh_patch@)
execute_process(
  COMMAND ${command}
  WORKING_DIRECTORY "@ECOSIM_source_dir@"
  RESULT_VARIABLE result
)

if (result)
  set(msg "ECOSIM patch command failed")
  foreach(arg IN LISTS command )
    set(msg "${msg} '${arg}'")
  endforeach()
  message(FATAL_ERROR ${msg})
endif()
