# CMake ecosim configure file

# Now run the config
message(STATUS "We are in the config script")

set(command @CMAKE_COMMAND@)
set(ATS_ECOSIM_BUILD 1)

message(STATUS "ATS_ECOSIM_BUILD: ${ATS_ECOSIM_BUILD}")

execute_process(
  COMMAND ${command}
  RESULT_VARIABLE result
  WORKING_DIRECTORY "@ECOSIM_source_dir@/"
)

if (result)
  set(msg "ecosim config command failed")
  foreach(arg IN LISTS command )
    set(msg "${msg} '${arg}'")
  endforeach()
  message(FATAL_ERROR ${msg})
endif()
